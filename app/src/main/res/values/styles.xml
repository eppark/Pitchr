<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Colors -->
        <item name="colorPrimary">@color/spotifyGreen</item>
        <item name="colorPrimaryDark">@color/gray3</item>
        <item name="colorAccent">@color/gray1</item>
        <item name="font">@font/pitchr</item>
        <item name="android:textColorHint">@color/gray1</item>
        <item name="colorControlNormal">@color/white</item>

        <!-- Animations -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="PitchrTextAppearance">
        <item name="android:fontFamily">@font/pitchr</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="BottomNavigationView">
        <item name="colorPrimary">@color/spotifyGreen</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="CircularReveal" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>